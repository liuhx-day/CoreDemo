@model CoreDemo.Models.Cinema

<tr>
    <th scope="row">@Model.Id</th>
    <td>
        <a asp-controller="Movie" asp-action="Index" asp-route-cinemaId="@Model.Id">@Model.Name</a>
    </td>
    <td>@Model.Location</td>
    <td>@Model.Capacity</td>
    <td> @await Component.InvokeAsync("MovieCount", new { cinemaId = Model.Id })</td>
    <td>

        <a asp-controller="Home" asp-action="Edit" asp-route-cinemaId="@Model.Id">编辑</a>
        <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">删除</a>
    </td>
</tr>